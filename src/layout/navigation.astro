---
import Rss from '../components/icons/rss.astro';
import MoreMenu from '../components/moreMenu.astro';
import moreLinks from '../data/moreLinks';
import '../styles/global.css';

// ✅ 传给 More 的链接：包含自定义链接 + Blogs / About
const fullMoreLinks = [
  ...moreLinks,
  { name: 'Blogs', url: '/' },
  { name: 'About', url: '/about' },
];
---

<header
  class='bg-bgLight dark:bg-bgDark
  h-16 w-full pl-6 pr-6 pt-4 pb-4 mb-1 flex justify-between items-center
  z-50 relative'
>
  <div class='flex'>
    <a href='/' class='md:text-4xl text-2xl font-bold'>
      <span class='text-phBlack dark:text-phWhite'> GoatPretty's </span>
      <span
        class='bg-phOrange rounded-md pt-1 pl-1 pr-1 text-phWhite dark:text-phBlack'
      >
        Blog
      </span>
    </a>
    <a href='/rss.xml'>
      <Rss
        class='text-fontLight dark:text-fontDark md:h-6 md:w-6 h-6 w-6 ml-2'
      />
    </a>
  </div>

  <nav class='text-fontLight dark:text-fontDark text-xl relative'>
    <ul class='flex items-center'>
      <!-- ✅ 移动端整体隐藏，桌面端显示（把两个链接包在同一个 li 里，避免任何样式覆盖问题） -->
      <li class="hidden md:flex">
        <a href='/' class='inline-flex p-2 md:mr-2 mr-1'>Blogs</a>
        <a href='/about' class='inline-flex p-2'>About</a>
      </li>

      <!-- ✅ More 始终显示；移动端里会包含 Blogs / About -->
      <li class='inline-flex flex-initial p-2 relative'>
        <MoreMenu links={fullMoreLinks} />
      </li>
    </ul>
  </nav>
</header>
