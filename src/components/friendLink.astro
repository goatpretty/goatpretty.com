---
import FriendLinks from '../components/icons/friendLinks.astro';
import FriendLinkItem from '../components/friendLinkItem.astro';
import config from '../../config';
---

<div
  class="bg-foilLight dark:bg-foilDark flex flex-col items-center
         text-bg text-profileTextLight dark:text-profileTextDark
         mt-2 md:mx-6 mx-4
         rounded-2xl
         p-4 pt-0 transition-transform duration-300 hover:scale-[1.02] hover:shadow-lg"
>
  <div class="flex flex-row mt-3 mb-2 items-center">
    <FriendLinks class="h-6 w-6 mr-2 text-phOrange" />
    <span class="font-semibold tracking-wide">Friend Links</span>
  </div>

  <div class="flex flex-col w-full space-y-1">
    {
      Object.entries(config.friendlink).map(([blogName, link]) => (
        <FriendLinkItem blogName={blogName} link={link} />
      ))
    }
  </div>
</div>
