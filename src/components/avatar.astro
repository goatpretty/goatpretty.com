---
import * as motion from 'motion/react-client';

export interface Props {
    src: string;
    alt?: string;
    size?: { base: number; md: number };
}
const { src, alt = 'avatar', size = { base: 36, md: 40 } } = Astro.props;
---

<motion.div client:load whileHover={{ scale: 1.1 }} whileTap={{ scale: 0.8 }}>
    <img
        src={src}
        alt={alt}
        class='rounded-full outline-foilDark dark:outline-foilLight
        w-36 h-36 md:w-32 md:h-32 outline outline-1'
    />
</motion.div>
